{
  "manifest_version": 2,
  "name": "SummarizeAI",
  "version": "1.0",
  "description": "Analyzes privacy policies using SMMRY API.",
  "permissions": ["activeTab", "https://api.smmry.com"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
